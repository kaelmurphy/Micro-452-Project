# Variables
var error = 0
var position = 0
var done = 0

# Update loop
timer.period[0] = 10 # Milliseconds
onevent timer0

	# Early return if move routine is done
	if done == 1 then
		return
	end

	# Compute position error
	position = position + (motor.left.speed + motor.right.speed) / 200
  	error = 100 - position
  	
  	# Apply target speed
	if error > 10 then
		motor.left.target = 200
		motor.right.target = 200
		leds.top = [0, 32, 0]

	# Stop program when within 1 cm of target
	else
		motor.left.target = 0
		motor.right.target = 0
		leds.top = [0, 0, 32]
		done = 1
		emit done
	end
